<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BookChapterVerse">



    <TextView android:text="Input your favorite Scripture:"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/holo_blue_bright"/>


    <TextView android:text="Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/favBook"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:inputType="text"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_marginTop="95dp"/>

    <TextView android:text="Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/favChapter"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:inputType="text"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_marginTop="215dp"/>

    <TextView android:text="Verse(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/favVerse"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:inputType="text"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_marginTop="335dp"/>

    <Button
        android:id="@+id/btnGenCurTime"
        android:layout_width="match_parent"
        android:layout_marginTop="480dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="20dp"
        android:onClick="buttonOnClick"/>
</RelativeLayout>
